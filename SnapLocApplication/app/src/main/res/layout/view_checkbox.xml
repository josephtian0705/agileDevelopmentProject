<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:flowlayout="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp">

    <com.legaxus.pkaik.CustomTextView
        android:id="@+id/txt_checkbox_lable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/details"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"
        app:fontName="@string/sanfranciso_Bold" />

    <com.liangfeizc.flowlayout.FlowLayout
        android:id="@+id/ly_checkbox"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <!--flowlayout:vertical_spacing="30dp"-->
    <!--flowlayout:horizontal_spacing="30dp"-->

    <com.legaxus.pkaik.FlowLayoutView
        android:id="@+id/flowlayout_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:lineSpacing="10dp">

    </com.legaxus.pkaik.FlowLayoutView>


</LinearLayout>